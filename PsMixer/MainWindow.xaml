<Window x:Class="PsMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:PsMixer.Views"
        xmlns:my="clr-namespace:PsMixer"
        Title="{Binding ElementName=MixerControl,
                        Path=DataContext.PlayingSong,
                        StringFormat=Phase Shift Mixer | {0}}"
        Width="860"
        Height="710"
        MinWidth="800"
        MinHeight="600">
    <Views:MixerView x:Name="MixerControl"
                     x:FieldModifier="private"/>
</Window>