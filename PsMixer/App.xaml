<Application x:Class="PsMixer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:PsMixer.Converters"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/MediaButtonsAnimations.xaml"/>
                <ResourceDictionary Source="Resources/SliderStyle.xaml"/>
                <ResourceDictionary>
                    <Converters:ChannelNameToImageSourceConverter x:Key="ChannelNameToImageSourceConverter"/>
                    <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConveter"/>
                    <ControlTemplate x:Key="GridSplitterTemplate" TargetType="GridSplitter">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Foreground}" />
                        </Grid>
                    </ControlTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
