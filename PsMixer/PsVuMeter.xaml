<UserControl x:Class="PsMixer.PsVuMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fx="clr-namespace:VuShaderEffect;assembly=VuShaderEffect"
             xmlns:mixer="clr-namespace:PsMixer"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="30">
    <Image Source="/PsMixer;component/Images/MixerLane/vu_meter.png"
           Stretch="Fill">
        <Image.Effect>
            <fx:VuEffect Level="{Binding RelativeSource={RelativeSource AncestorType=mixer:PsVuMeter},
                                         Path=VuLevel}"/>
        </Image.Effect>
    </Image>
</UserControl>